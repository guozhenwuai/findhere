<?xml version="1.0" encoding="utf-8"?>
<com.FindHere.view.LeftDeleteView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:paddingLeft="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    <LinearLayout android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"

        >

        <ImageView
            android:id="@+id/target_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@drawable/image"
            android:src="@drawable/round_mask1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/target"

        android:background="@drawable/shape_1">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="23333333333333"
            android:textSize="24dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_content"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/image"
            android:layout_gravity="center_vertical"


            android:visibility="visible"/>
        <ImageButton
            android:id="@+id/sound_content"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/sound1"
            android:background="@android:color/transparent"
            android:visibility="gone"/>
    </LinearLayout>

   <!-- <LinearLayout
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"/>
    </LinearLayout>-->

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_marginLeft="5dp"
           android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/content"
            android:background="@color/gray">
            <ImageButton
                android:id="@+id/delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/delete"

                android:scaleType="fitXY"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
</com.FindHere.view.LeftDeleteView>